  "panels": [
    {
      "id": 1,
      "title": "Active WebSocket Connections",
      "type": "stat",
      "targets": [{ "expr": "ws_connections_active" }],
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "title": "Total Connections",
      "type": "stat",
      "targets": [{ "expr": "ws_connections_total" }],
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 }
    },
    {
      "id": 3,
      "title": "Message Rate (In/Out)",
      "type": "timeseries",
      "targets": [
        { "expr": "rate(ws_messages_received_total[5m])", "legendFormat": "Received" },
        { "expr": "rate(ws_messages_sent_total[5m])", "legendFormat": "Sent" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 }
    },
    {
      "id": 4,
      "title": "Broker Publish Rate",
      "type": "timeseries",
      "targets": [{ "expr": "sum(rate(broker_messages_published_total[5m])) by (broker_type)" }],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 }
    },
    {
      "id": 5,
      "title": "Authentication Failures",
      "type": "timeseries",
      "targets": [{ "expr": "sum(rate(auth_failures_total[5m])) by (reason)" }],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 }
    },
    {
      "id": 6,
      "title": "Authentication Success Rate",
      "type": "timeseries",
      "targets": [{ "expr": "rate(auth_success_total[5m])" }],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 }
    }
